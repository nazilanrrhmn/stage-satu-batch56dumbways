<section class="container mt-5">
  <div class="row">
    <!-- Create Project Form -->
    <div class="col-12 mb-5">
      <div class="project-form">
        <h1 class="text-center mb-4">Add My Project</h1>
        <form id="myForm" onsubmit="addProject(event)">
          <div class="form-group">
            <label for="projectName">Project Name</label>
            <input id="projectName" type="text" class="form-control" required placeholder="Input your project name" />
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="startDate">Start Date</label>
              <input type="date" id="startDate" class="form-control" required />
            </div>
            <div class="col-md-6">
              <label for="endDate">End Date</label>
              <input type="date" id="endDate" class="form-control" required />
            </div>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" rows="3" placeholder="Enter project description"></textarea>
          </div>
          <div class="form-group">
            <label for="technologies">Technologies</label>
            <div class="checkbox-group">
              <div class="form-check">
                <input type="checkbox" id="checkNode" class="form-check-input" />
                <label for="checkNode" class="form-check-label">NodeJS</label>
              </div>
              <div class="form-check">
                <input type="checkbox" id="checkReact" class="form-check-input" />
                <label for="checkReact" class="form-check-label">ReactJS</label>
              </div>
              <div class="form-check">
                <input type="checkbox" id="checkNext" class="form-check-input" />
                <label for="checkNext" class="form-check-label">NextJS</label>
              </div>
              <div class="form-check">
                <input type="checkbox" id="checkTypescript" class="form-check-input" />
                <label for="checkTypescript" class="form-check-label">TypeScript</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="uploadImage">Upload Image</label>
            <input type="file" id="uploadImage" class="form-control" />
          </div>
          <div class="text-end">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Project List -->
    <div class="col-12">
      <h1 class="text-center mb-4">Project List</h1>
      <div class="row" id="content">
        <!-- Project Card -->
        <div class="col-md-6 col-lg-4 mb-4">
        </div>
      </div>
    </div>
  </div>
</section>